
<div class='watches'>
  <br>
  <form id='add-watch' class='form-inline'>
    <div class='form-group'>
      <label for='add-watch-id'>ID: &nbsp;</label>
      {{input id='add-watch-id' class='form-control' type='text' placeholder=" example: gd57Pw1" value=val autofocus=true}}
      &nbsp; 
      <button class='btn btn-primary' {{action 'add'}}> Add </button>
      &nbsp; 
      {{#if errMsg}}
        <div class='err-msg alert alert-info pull-right' role="alert">
          {{errMsg}}
        </div>
      {{/if}}
    </div>
  </form>

  {{#if length}}

    <table class="table table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>started</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each watch in controller}} 
          <tr {{action 'showActivity' watch}}>
            <td>{{watch.img_id}}</td>
            <td>{{watch.started}}</td>
            <td class="text-right">
              <span class="delete-watch glyphicon glyphicon-remove"></span>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  {{else}}

    <div class="watches-empty">
      <br><p>No watches yet</p>
    </div>

  {{/if}}
</div>