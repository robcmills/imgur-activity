
{{#if length}}

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>started</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each}} 
      <tr>
        <td>{{img_id}}</td>
        <td>{{started}}</td>
        <td class="text-right">
          <span class="glyphicon glyphicon-remove"> </span>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{else}}

<div class="watches-empty">
  <h3>No watches yet</h3>
</div>

{{/if}}